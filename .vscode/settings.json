{
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".vscode-insiders",
    "package.json",
    "*.log",
    "*.sql",
    "dist",
    "postgres"
  ],
  "cSpell.words": [
    "asteasolutions",
    "eventarc",
    "FIRESTORE",
    "hasegawa",
    "nodenext"
  ],
  "editor.defaultFormatter": "biomejs.biome",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.formatOnSave": true,
  "json.schemaDownload.enable": true,
}
