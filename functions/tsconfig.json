{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@mimi-api/*": ["src/*"]
    },
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
